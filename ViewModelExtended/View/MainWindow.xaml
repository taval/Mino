<Window
	x:Class="ViewModelExtended.MainWindow"
	x:Name="MainWindowView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:ViewModelExtended"
	mc:Ignorable="d"
	Title="Mino" Height="450" Width="800">

	<StackPanel>
		<!-- Menu -->
		<Menu>
			<MenuItem Header="_File">
				<MenuItem Header="_Exit" Command="{ Binding CloseCommand }" />
			</MenuItem>
			<MenuItem Header="_Edit" />
			<MenuItem Header="_Options" />
			<MenuItem Header="_Help" />
		</Menu>
		
		<local:PrimeView DataContext="{ Binding Resource.PrimeViewModel }" />
	</StackPanel>
</Window>
